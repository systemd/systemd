#!/bin/bash
# SPDX-License-Identifier: LGPL-2.1-or-later
set -e

if [[ "$1" == "build" ]] || ((NO_BUILD)); then
    exit 0
fi

if ! pkg-config --exists landlockconfig; then
    if ls /work/src/tools/landlockconfig-git-*.pkg.tar.zst &>/dev/null; then
        pacman -U --noconfirm /work/src/tools/landlockconfig-git-*.pkg.tar.zst
    else
        echo "Failed to find liblandlockconfig" >&2
        exit 1
    fi
fi

if [[ ! -f "pkg/$PKG_SUBDIR/PKGBUILD" ]]; then
    echo "PKGBUILD not found at pkg/$PKG_SUBDIR/PKGBUILD, run mkosi once with -ff to make sure the PKGBUILD is cloned" >&2
    exit 1
fi

# shellcheck source=/dev/null
_systemd_UPSTREAM=1 . "pkg/$PKG_SUBDIR/PKGBUILD"

# shellcheck disable=SC2154
mkosi-install "${makedepends[@]}"
