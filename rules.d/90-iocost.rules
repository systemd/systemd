SUBSYSTEM!="block", GOTO="iocost_end"

ACTION!="add", GOTO="iocost_end"

IMPORT{builtin}="hwdb 'block:*:name:$env{ID_MODEL}:'"

ENV{IOCOST_SOLUTIONS}=="", GOTO="iocost_end"

RUN+="iocost apply $env{DEVNAME}"

LABEL="iocost_end"
