# Logitech
################
# Litra Beam
bluetooth:v046dpc901*
usb:v046dpc901*
 ID_AV_LIGHTS=1

# Litra Glow
bluetooth:v046dpc900*
usb:v046dpc900*
 ID_AV_LIGHTS=1
