_kernel_install() {
    local comps
    local MACHINE_ID
    local cur=${COMP_WORDS[COMP_CWORD]}
    local prev=${COMP_WORDS[COMP_CWORD-1]}
    local bls_types="both 1 2"

    case $COMP_CWORD in
        1)
            comps="add remove"
            ;;
        2)
            comps=$(cd /lib/modules; echo [0-9]*)
            if [[ ${COMP_WORDS[1]} == "remove" ]] && [[ -f /etc/machine-id ]]; then
                read MACHINE_ID < /etc/machine-id
                if [[ $MACHINE_ID ]] && ( [[ -d /boot/$MACHINE_ID ]] || [[ -L /boot/$MACHINE_ID ]] ); then
                    comps=$(cd "/boot/$MACHINE_ID"; echo [0-9]*)
                fi
            fi
            ;;
        3)
            [[ "$cur" ]] || cur=/lib/modules/${COMP_WORDS[2]}/vmlinuz
            comps=$(compgen -f -- "$cur")
            compopt -o filenames
            ;;
    esac

    if [[ "${COMP_WORDS[1]}" == "remove" ]] && [[ $cur = -* ]]; then
        COMPREPLY=( $(compgen -W '--bls-type' -- "$cur") )
        return 0
    fi

    case "$prev" in
        --bls-type)
            COMPREPLY=( $(compgen -W "$bls_types" -- "$cur") )
            return 0
            ;;
    esac

    COMPREPLY=( $(compgen -W '$comps' -- "$cur") )
    return 0
}

complete -F _kernel_install kernel-install
