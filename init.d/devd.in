command=/sbin/devd
command_args=$devd_args
name="Device State Change Daemon"

depend() {
	need localmount
	after bootmisc
	before net.lo0
	keyword -jail -prefix
}

start_pre() {
	sysctl hw.bus.devctl_disable=0 >/dev/null
}

stop_post() {
	sysctl hw.bus.devctl_disable=1 >/dev/null
}
