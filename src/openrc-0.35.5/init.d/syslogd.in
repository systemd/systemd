command=/usr/sbin/syslogd
command_args=$syslogd_args
case "$RC_UNAME" in
	FreeBSD|DragonFly)	pidfile=/var/run/syslog.pid;;
	*)			pidfile=/var/run/syslogd.pid;;
esac
name="System Logger Daemon"

depend()
{
	provide logger
	use net newsyslog
	need localmount
	after bootmisc clock
	keyword -prefix
}
