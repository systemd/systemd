depend()
{
	after clock fsck
	keyword -prefix
}

start()
{
	ebegin "Setting tty flags"
	ttyflags -a
	eend $? || return $?

	if [ -c /dev/ttyp0 ]; then
		chmod 666 /dev/tty[p-uw-zP-T][0-9a-zA-Z]
	fi
	if [ -c /dev/ttyv1 ]; then
		chmod 666 /dev/ttyv[0-9a-zA-Z]
	fi
}
