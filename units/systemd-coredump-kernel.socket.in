[Unit]
Description=Process Core Dump Kernel Socket
Documentation=man:systemd-coredump(8)
DefaultDependencies=no
# Drop After=systemd-sysctl.service below when our kernel baseline is bumped to
# v6.16 or newer.
After=systemd-sysctl.service
Before=shutdown.target
Conflicts=shutdown.target
ConditionVirtualization=!container

[Socket]
ExecStartPost={{LIBEXECDIR}}/systemd-coredump --register
ListenStream=/run/systemd/coredump-kernel
SocketMode=0600
Accept=yes
MaxConnections=16
