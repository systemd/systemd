[Unit]
Description=Enforce Volatile /usr File System
Documentation=man:systemd-volatile-usr.service(8)
DefaultDependencies=no
Conflicts=shutdown.target
After=sysroot.mount sysroot-usr.mount systemd-repart.service
Before=initrd-usr-fs.target shutdown.target
AssertPathExists=/etc/initrd-release

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart={{LIBEXECDIR}}/systemd-volatile-usr overlay-usr /sysroot
