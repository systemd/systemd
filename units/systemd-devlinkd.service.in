[Unit]
Description=Devlink Configuration
Documentation=man:systemd-devlinkd.service(8)
Documentation=man:org.freedesktop.devlink1(5)
ConditionCapability=CAP_NET_ADMIN
DefaultDependencies=no
After=systemd-udevd.service
Before=systemd-networkd.service multi-user.target shutdown.target initrd-switch-root.target
Conflicts=shutdown.target initrd-switch-root.target

[Service]
AmbientCapabilities=CAP_NET_ADMIN CAP_NET_BIND_SERVICE CAP_NET_BROADCAST CAP_NET_RAW CAP_SYS_ADMIN
BusName=org.freedesktop.devlink1
CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE CAP_NET_BROADCAST CAP_NET_RAW CAP_SYS_ADMIN
ExecStart={{LIBEXECDIR}}/systemd-devlinkd
FileDescriptorStoreMax=512
LockPersonality=yes
MemoryDenyWriteExecute=yes
NoNewPrivileges=yes
ProtectProc=invisible
ProtectClock=yes
ProtectControlGroups=yes
ProtectHome=yes
ProtectKernelLogs=yes
ProtectKernelModules=yes
ProtectSystem=strict
RestartKillSignal=SIGUSR2
RestrictNamespaces=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
Type=notify-reload
User=systemd-devlink

[Install]
WantedBy=multi-user.target
Alias=dbus-org.freedesktop.devlink1.service
