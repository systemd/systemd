[Unit]
Description=System Install Tool
Documentation=man:systemd-sysinstall(1)
Wants=dbus.socket systemd-logind.service systemd-mute-console.socket
After=systemd-logind.service

[Service]
ExecStart=systemd-sysinstall --variables=yes --reboot=yes
StandardOutput=tty
StandardInput=tty
StandardError=tty
