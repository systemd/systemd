[Unit]
Description=DDI File System Mounter Socket
Documentation=man:systemd-mntfsd.service(8)
DefaultDependencies=no
Before=sockets.target

[Socket]
ListenStream=/run/systemd/mntfs/io.systemd.MountFileSystem
SocketMode=0666

[Install]
WantedBy=sockets.target
