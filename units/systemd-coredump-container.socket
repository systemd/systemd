[Unit]
Description=Process Core Dump Container Socket
Documentation=man:systemd-coredump(8)
DefaultDependencies=no
Before=shutdown.target
Conflicts=shutdown.target
ConditionKernelVersion=>=6.16
ConditionVirtualization=container

[Socket]
ListenSequentialPacket=/run/systemd/coredump-container
SocketMode=0600
Accept=yes
MaxConnections=16
