[Unit]
Description=Project Service Manager for %i
Documentation=man:project@.service(5)
After=dbus.service systemd-oomd.service

[Service]
User=p_%i
DynamicUser=yes
Type=notify-reload
ExecStart={{LIBEXECDIR}}/systemd --user --unit=project@%i.target
Environment=HOME=/var/lib/projects/%i
Environment=XDG_RUNTIME_DIR=/run/projects/%i
StateDirectory=projects/%i
RuntimeDirectory=projects/%i
LogExtraFields=PROJECT=%i
Slice=project.slice
KillMode=mixed
Delegate=pids memory cpu
DelegateSubgroup=init.scope
TasksMax=infinity
TimeoutStopSec={{ DEFAULT_USER_TIMEOUT_SEC*4//3 }}s
KeyringMode=inherit
OOMScoreAdjust=100
MemoryPressureWatch=skip
