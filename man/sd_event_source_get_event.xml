<refentry id="sd_event_source_get_event" xmlns:xi="http://www.w3.org/2001/XInclude">

  <refentryinfo>
    <title>sd_event_source_get_event</title>
    <productname>systemd</productname>
  </refentryinfo>

  <refmeta>
