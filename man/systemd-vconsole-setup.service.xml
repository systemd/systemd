<refentry id="systemd-vconsole-setup.service" conditional='ENABLE_VCONSOLE'>

        <refentryinfo>
                <title>systemd-vconsole-setup.service</title>
                <productname>systemd</productname>

                <authorgroup>
                        <author>
                                <contrib>Developer</contrib>
                                <firstname>Lennart</firstname>
